---
import GitHubIcon from "@/components/icons/socials/GitHubIcon.astro";
import TwitterIcon from "@/components/icons/socials/TwitterIcon.astro";

const socials = [
	{
		name: "GitHub",
		link: "https://github.com/ojii3",
		icon: GitHubIcon,
	},
	{
		name: "Twitter",
		link: "https://twitter.com/ojii3_dev",
		icon: TwitterIcon,
	},
];
---

<footer class="">
  <div class="p-5">
    <ul class="flex gap-3 items-center justify-end">
      {
        socials.map((social) => (
          <li class="flex items-center justify-center">
            <a
              href={social.link}
              class="text-gray-500 hover:text-gray-700 transition-colors duration-200"
              target="_blank"
              rel="noopener noreferrer"
            >
              <social.icon />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</footer>
